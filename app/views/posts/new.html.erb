<h1>SenceOfCommitment</h1>
<h3>Tweet一覧</h3>
<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => 140 %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, 
    [["経済", "経済"], 
    ["国際", "国際"], 
    ["スポーツ", "スポーツ"],
    ["宗教", "宗教"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :about %>
    <%= f.text_field :about, :size => 140 %>
  </div>

  <%= f.submit "Tweetする" %>
<% end %>

<%= link_to "Tweet一覧に戻る", posts_path %>
